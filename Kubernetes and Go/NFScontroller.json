{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"nfs-server",
      "labels":{
         "role":"nfs-server"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "role":"nfs-server"
      },
      "template":{
         "metadata":{
            "labels":{
               "role":"nfs-server"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"nfs-server",
                  "image":"jsafrane/nfs-data",
                  "ports":[
                     {
                        "containerPort":2049,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      }
   }
}