{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "id":"node-mongo",
   "metadata":{
      "name":"node-mongo",
      "labels":{
         "app":"inventory"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "app":"inventory"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"inventory"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"mongo",
                  "image":"georgeluo/mongodb",
                  "ports":[
                     {
                        "name":"mongo-server",
                        "containerPort":27017
                     }
                  ]
               },
               {
                  "name":"node",
                  "image":"georgeluo/node",
                  "ports":[
                     {
                        "name":"node-server",
                        "containerPort":1337
                     }
                  ]
               }
			   
            ]
         }
      }
   }
}